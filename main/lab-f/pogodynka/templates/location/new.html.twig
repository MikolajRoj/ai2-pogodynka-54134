{% extends 'base.html.twig' %}

{% block title %}Create New Location{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Create new Location</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="mb-3">
            {{ form_label(form.city) }}
            {{ form_widget(form.city, {'attr': {'class': 'form-control', 'placeholder': 'Enter city name'}}) }}
            {{ form_errors(form.city) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.country) }}
            {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.country) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.latitude) }}
            {{ form_widget(form.latitude, {'attr': {'class': 'form-control', 'placeholder': 'Enter latitude'}}) }}
            {{ form_errors(form.latitude) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.longitude) }}
            {{ form_widget(form.longitude, {'attr': {'class': 'form-control', 'placeholder': 'Enter longitude'}}) }}
            {{ form_errors(form.longitude) }}
        </div>

        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>

        {{ form_end(form) }}

        <a href="{{ path('app_location_index') }}" class="btn btn-secondary mt-3">Back to list</a>
    </div>
{% endblock %}
